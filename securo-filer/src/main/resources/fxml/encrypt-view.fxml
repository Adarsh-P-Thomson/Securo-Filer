<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10.0" alignment="CENTER" layoutX="20.0" layoutY="20.0">
        <Label text="Encrypt File" styleClass="header"/>
        <TextField fx:id="filePathField" promptText="Enter file path" />
        <Button text="Select File" onAction="#handleSelectFile"/>
        <TextField fx:id="keySourceField" promptText="Enter key source" />
        <Button text="Encrypt" onAction="#handleEncrypt"/>
        <Label fx:id="statusLabel" text="" />
    </VBox>
</AnchorPane>